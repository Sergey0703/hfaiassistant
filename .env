# ====================================
# ENVIRONMENT CONFIGURATION FOR LEGAL ASSISTANT
# ====================================

# ====================================
# LLM SETTINGS
# ====================================
# ВАЖНО: НЕ ВСТАВЛЯЙТЕ РЕАЛЬНЫЙ ТОКЕН СЮДА!
# В HuggingFace Spaces токен устанавливается через веб-интерфейс
HF_TOKEN=your_token_will_be_set_in_hf_spaces_settings

# Demo режим (true = демо ответы, false = реальная Llama)
LLM_DEMO_MODE=false

# Llama модель
LLM_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Параметры генерации
LLM_MAX_TOKENS=300
LLM_TEMPERATURE=0.3

# ====================================
# DATABASE SETTINGS
# ====================================
USE_CHROMADB=true
CHROMADB_PATH=./chromadb_data

# ====================================
# API SETTINGS
# ====================================
LOG_LEVEL=INFO
CORS_ORIGINS=["*"]

# ====================================
# FILE PROCESSING
# ====================================
MAX_FILE_SIZE=10485760
CONTEXT_TRUNCATE_LENGTH=500
MAX_CONTEXT_DOCUMENTS=2

# ====================================
# HUGGINGFACE SPACES (автоматически)
# ====================================
# SPACE_ID устанавливается автоматически в HF Spaces